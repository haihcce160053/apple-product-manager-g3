    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var currentPageUrl = window.location.href;
            var urlPage = document.getElementsByName("url");
            for (var i = 0; i < urlPage.length; i++) {
                urlPage[i].value = currentPageUrl;
            }
        });
        $(document).ready(function () {
            $("#logoutLink").click(function () {
                window.location.href = "/Logout";
            });
            $("#orderHistory").click(function () {
                window.location.href = "/OrderHistory";
            });
            $("#updateProfile").click(function () {
                window.location.href = "/UpdateProfile";
            });
        });

        document.addEventListener("DOMContentLoaded", function () {
            var varValueElement = document.getElementById("var-value");
            var atcQuantityInput = document.getElementsByName("atcQuantity2")[0];

            atcQuantityInput.value = varValueElement.textContent;

            document.getElementById("btn-minus1").addEventListener("click", function () {
                updateQuantity(-1);
            });

            document.getElementById("btn-plus1").addEventListener("click", function () {
                updateQuantity(1);
            });

            function updateQuantity(change) {
                var currentQuantity = parseInt(atcQuantityInput.value) || 0;
                var newQuantity = currentQuantity + change;

                if (newQuantity >= 0) {
                    atcQuantityInput.value = newQuantity;
                    varValueElement.textContent = newQuantity;
                }
            }
        });
    </script>

