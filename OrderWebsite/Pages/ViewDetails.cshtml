    <!-- Open Content -->
    <section class="bg-light">
        <div class="container pb-5">
            <div class="row">
                <div class="col-lg-5 mt-5">
                    <div class="card mb-3">
                        <img class="card-img img-fluid" src="@pro.Image" alt="Card image cap" id="product-detail">
                    </div>
                </div>
                <!-- col end -->
